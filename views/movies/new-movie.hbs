<h2>Make a new movie</h2>

<form action="/movies/create" method="POST">
  <label>
    Title
    <input type="text" name="title" placeholder="The movie title" />
  </label>
  <br />
  <label>
    Genre
    <input type="text" name="genre" placeholder="The movie genre" />
  </label>
  <br />
  <label>
    Plot
    <input type="text" name="plot" placeholder="The movie plot" />
  </label>
  <br />
  <label>
    Cast:

  </label>
  <br />
  <select name="cast" multiple>
    {{#each allCelebs}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}

  </select>
  <br />
  <button type="submit">Submit</button>

</form>