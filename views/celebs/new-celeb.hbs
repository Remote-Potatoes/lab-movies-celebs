<h2>Create a new celeb</h2>

<form action="/celebs/create" method="POST">
  <label>
    Name
    <input
      type="text"
      name="name"
      placeholder="The Celeb Name"
      value="{{name}}"
    />
  </label>
  <br />
  <label>
    Occupation
    <input
      type="text"
      name="occupation"
      placeholder="The Celeb Occupation"
      value="{{occupation}}"
    />
  </label>
  <br />
  <label>
    Catch Phrase
    <input
      type="text"
      name="catchPhrase"
      placeholder="The Celeb Catch Phrase"
      value="{{catchPhrase}}"
    />
  </label>
  <br />
  <button type="submit">Submit</button>
</form>